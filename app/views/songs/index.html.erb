<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>




 <div class="row">
    <% @songs.each do |song| %>
      <div class="col-md-6">
        <div class="well">
          <h2>'<%= link_to song.name, song %>', by 
            <%= link_to song.artist.name, artist_path(id: song.artist) %></h2>
          <%= image_tag song.artist.avatar.url, width: "100" %>
          <h4><%= song.rating %></h4>
          <br />
        <p><%= link_to 'Show', song %>
          <%= link_to 'Edit', edit_song_path(song) %>
          <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>
</div>

<br>

