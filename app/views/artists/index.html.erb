<p id="notice"><%= notice %></p>

<h1>ALL ARTISTS</h1>




<p><%= link_to new_artist_path do %>
  <span class="glyphicon glyphicon-plus"></span> Add New
  <% end %>
</p>

  <div class="row">
    <% @artists.each do |artist| %>
      <div class="col-md-6">
        <div class="well">
          <p><%= image_tag artist.avatar.url, width: "150" %></p><h2 style="color:white;"><%= link_to artist.name, artist %></h2>
          
          <p>
            <p2><% "#{artist.rating}".to_i.times do %>
            <span class="glyphicon glyphicon-star"></span>
            <% end %>
          </p2>
<br>
          <%= link_to edit_artist_path(artist) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to artist, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </p>
        </div>
      </div>
    <% end %>
  </div>


<br>


